<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.watermelon.moviesapp.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_genreFragment"
            app:destination="@id/genreFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.watermelon.moviesapp.ui.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.watermelon.moviesapp.ui.details.DetailsFragment"
        android:label="DetailsFragment"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="movieId"
            app:argType="integer" />
        <action
            android:id="@+id/action_detailsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/tvFragment"
        android:name="com.watermelon.moviesapp.ui.tv.TvFragment"
        android:label="TvFragment"
        tools:layout="@layout/fragment_tv"/>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.watermelon.moviesapp.ui.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <argument
            android:name="personId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/genreFragment"
        android:name="com.watermelon.moviesapp.ui.genres.GenreFragment"
        android:label="GenreFragment"
        tools:layout="@layout/fragment_genres">
        <argument
            android:name="genreId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/trendingFragment"
        android:name="com.watermelon.moviesapp.ui.trending.TrendingFragment"
        android:label="TrendingFragment"
        tools:layout="@layout/fragment_trending"/>
</navigation>
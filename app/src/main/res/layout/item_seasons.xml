<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.watermelon.moviesapp.model.response.tv.details.Season" />

        <variable
            name="listener"
            type="com.watermelon.moviesapp.ui.home.MovieInteractionListener" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape_season"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:paddingHorizontal="@dimen/padding16dp"
            android:layout_marginHorizontal="@dimen/margin16dp"
            android:layout_marginVertical="@dimen/margin4dp"
            android:paddingVertical="@dimen/padding16dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.name}"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/text16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Season 1" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                app:attachedView="@{layoutDescription}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layoutDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8dp"
                android:layout_marginHorizontal="@dimen/margin8dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin16dp"
                    android:text="@{item.overview}"
                    android:textColor="@color/primary_text_color"
                    app:isNotNull="@{item.overview}"
                    tools:text="description" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="end"
                    android:text="@{item.airDate}"
                    android:textColor="@color/primary_text_color"
                    app:chipStrokeColor="@color/base_color"
                    app:chipStrokeWidth="1dp"
                    app:isNotNull="@{item.airDate}"
                    tools:text="1990-2-31" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
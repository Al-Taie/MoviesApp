<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.watermelon.moviesapp.ui.trending.TrendingViewModel" />

        <variable
            name="adapter"
            type="com.watermelon.moviesapp.ui.trending.adapter.TrendingNestedAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.watermelon.moviesapp.ui.trending.TrendingFragment">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tending_fragment_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin8dp"
            android:orientation="vertical"
            app:adapter="@{adapter}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_trending_parent_all"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
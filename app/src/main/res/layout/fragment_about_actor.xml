<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.watermelon.moviesapp.ui.profile.about.AboutViewModel" />
    </data>

    <ScrollView
        android:id="@+id/details_movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/birth_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="@dimen/margin16dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_baseline_cake_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin16dp"
                android:layout_marginTop="24dp"
                android:elevation="24dp"
                android:text="@{viewModel.person.toData().birthday}"
                android:textColor="@color/primary_text_color"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/birth_icon"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1998-05-11" />

            <ImageView
                android:id="@+id/followers_icon"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:layout_marginTop="@dimen/margin16dp"
                android:src="@drawable/ic_contact_friend_heart"
                app:layout_constraintStart_toStartOf="@+id/birth_icon"
                app:layout_constraintTop_toBottomOf="@+id/birth_icon" />

            <TextView
                android:id="@+id/followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin16dp"
                android:layout_marginTop="@dimen/margin16dp"
                android:text="@{String.valueOf(viewModel.person.toData().popularity)}"
                android:textColor="@color/primary_text_color"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/followers_icon"
                app:layout_constraintTop_toBottomOf="@+id/birthday"
                tools:text="63.997" />

            <ImageView
                android:id="@+id/alive_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="@dimen/margin16dp"
                android:src="@drawable/bi_emoji_smile"
                app:layout_constraintStart_toStartOf="@+id/followers_icon"
                app:layout_constraintTop_toBottomOf="@+id/followers_icon"
                app:showAliveOrNot="@{viewModel.person.toData().deathDay!= null? @drawable/ic_death_icon_png : @drawable/ic_baseline_sentiment_satisfied_alt_24}" />

            <TextView
                android:id="@+id/is_alive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin16dp"
                android:layout_marginTop="@dimen/margin16dp"
                android:text="@string/alive"
                android:textColor="@color/primary_text_color"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/alive_icon"
                app:layout_constraintTop_toBottomOf="@+id/followers" />

            <TextView
                android:id="@+id/text_biography"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:text="@string/biography"
                android:letterSpacing="0.2"
                android:textColor="@color/base_color"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/alive_icon"
                app:layout_constraintTop_toBottomOf="@+id/alive_icon" />

            <View
                android:id="@+id/view2"
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/base_color"
                app:layout_constraintStart_toStartOf="@+id/text_biography"
                app:layout_constraintTop_toBottomOf="@+id/text_biography" />

            <TextView
                android:id="@+id/biography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin24dp"
                android:layout_marginTop="@dimen/margin8dp"
                android:scrollbars="vertical"
                android:text="@{viewModel.person.toData().biography}"
                android:textColor="@color/primary_text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                app:showMoreTextLines="@{viewModel.person.toData().biography}" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.watermelon.moviesapp.ui.details.DetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color" >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding2x"
            android:layout_marginTop="@dimen/margin4x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading"
            app:showWhenLoading="@{viewModel.movieDetails}" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/movie_poster"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:scaleType="centerCrop"
            app:image="@{viewModel.movieDetails.toData().posterPath}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:showWhenSuccess="@{viewModel.movieDetails}"
            tools:src="@tools:sample/avatars" />

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ScrollView
                    android:id="@+id/details_movie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/details_shape"
                    android:elevation="@dimen/elevation8"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding24dp"
                    android:paddingBottom="@dimen/padding32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin24dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_baseline_star_24" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            tools:text="8.7"
                            android:textSize="@dimen/text12sp"
                            android:textColor="@color/primary_text_color"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin24dp"
                        android:text="@{viewModel.movieDetails.toData().title}"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/text28sp"
                        android:textStyle="bold"
                        tools:text="Movies Name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin24dp"
                        android:layout_marginTop="@dimen/margin4dp"
                        android:text="@{viewModel.movieDetails.toData().releaseDate + ` . ` + viewModel.movieDetails.toData().status +` . ( `+viewModel.movieDetails.toData().originalLanguage+` )`}"
                        android:textAllCaps="true"
                        android:textColor="@color/primary_text_color"
                        android:textStyle="bold"
                        tools:text="1995-10-20 . Released . (EN)" />

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:theListForChips="@{viewModel.movieDetails.toData().genres}"
                        android:layout_marginHorizontal="@dimen/margin24dp"
                        android:checked="false"
                        android:layout_marginTop="@dimen/margin8dp"
                        android:orientation="horizontal"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin24dp"
                        android:layout_marginTop="@dimen/margin16dp"
                        android:background="@color/background_color"
                        android:padding="@dimen/margin24dp"
                        app:cardCornerRadius="@dimen/radius16"
                        app:cardElevation="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineHeight="20dp"
                            android:padding="@dimen/padding16dp"
                            android:text="@{viewModel.movieDetails.toData().overview}"
                            android:textColor="@color/primary_text_color"
                            tools:text="The film centers on the love relationship among the band's bassist Haruki Nakayama, drummer Akihiko Kaji, and Akihiko's   roommate and ex-boyfriend Ugetsu Murata." />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/padding24dp"
                        android:layout_marginTop="@dimen/padding16dp"
                        android:text="@string/cast"
                        app:isNotNull="@{viewModel.credits.toData().cast[0]}"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/text20sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_cast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/padding28dp"
                        app:items="@{viewModel.credits.toData().cast}"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:showWhenSuccess="@{viewModel.credits}"
                        tools:listitem="@layout/item_cast" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin24dp"
                        android:layout_marginTop="@dimen/padding24dp"
                        android:text="@string/similar_movie"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/text20sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_similar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/padding28dp"
                        app:items="@{viewModel.similarMovies.toData().movies}"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:showWhenSuccess="@{viewModel.similarMovies}"
                        tools:listitem="@layout/item_similar_movies" />

                </LinearLayout>

                </ScrollView>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


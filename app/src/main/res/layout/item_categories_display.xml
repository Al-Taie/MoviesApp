<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.watermelon.moviesapp.model.response.movie.Movie" />
        <variable
            name="listener"
            type="com.watermelon.moviesapp.ui.categories.categoriesdisplay.CategoriesDisplayInteractionListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="@dimen/margin8dp"
        android:layout_marginTop="@dimen/margin8dp"
        android:backgroundTint="@color/cards_color"
        app:cardCornerRadius="16dp"
        android:onClick="@{() -> listener.onItemClick(item.id)}"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_image"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin4dp"
                android:elevation="@dimen/margin16dp"
                android:scaleType="centerCrop"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:image="@{item.posterPath}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                app:srcCompat="@drawable/splash_image"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/move_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin16dp"
                android:layout_marginTop="@dimen/margin16dp"
                android:elevation="@dimen/elevation8"
                android:lines="1"
                android:maxHeight="25dp"
                android:minWidth="90dp"
                android:singleLine="true"
                android:text="@{item.originalTitle}"
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/item_image"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="movie name" />

            <TextView
                android:id="@+id/release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/elevation8"
                android:text="@{item.releaseDate}"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/text12sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/move_name"
                app:layout_constraintTop_toTopOf="@+id/move_name"
                tools:text="release date" />

            <RatingBar
                android:id="@+id/movie_rate"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/elevation8"
                android:isIndicator="true"
                android:numStars="5"
                android:progressBackgroundTint="@color/secondary_text_color"
                android:progressTint="@color/base_color"
                android:rating="@{Float.valueOf(item.voteAverage)}"
                app:layout_constraintLeft_toLeftOf="@id/move_name"
                app:layout_constraintStart_toStartOf="@+id/release_date"
                app:layout_constraintTop_toBottomOf="@+id/release_date" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
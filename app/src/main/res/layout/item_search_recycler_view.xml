<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.watermelon.moviesapp.model.response.Movie" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginVertical="@dimen/margin2x"
        android:layout_marginHorizontal="@dimen/margin8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:image ="@{item.posterPath}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_move_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{item.originalTitle}"
            android:textColor="@color/black"
            android:textSize="@dimen/text20sp"
            android:layout_marginLeft="@dimen/margin28dp"
            app:layout_constraintStart_toEndOf="@id/item_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="movie name" />

        <TextView
            android:id="@+id/move_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin4dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text20sp"
            android:text="@{String.valueOf(item.voteAverage)}"
            android:layout_marginLeft="@dimen/margin28dp"
            app:layout_constraintStart_toEndOf="@id/item_image"
            app:layout_constraintTop_toBottomOf="@id/text_move_name"
            tools:text="move rate" />


        <TextView
            android:id="@+id/movie_director_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin28dp"
            android:text="@{item.title}"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:layout_marginTop="35dp"
            android:textSize="@dimen/text18sp"
            app:layout_constraintStart_toEndOf="@+id/item_image"
            app:layout_constraintTop_toBottomOf="@+id/text_move_name"
            tools:text="movie director name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.watermelon.moviesapp.ui.tv.TvViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/dark_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:elevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading"
            app:showWhenLoading="@{viewModel.stream}"
            tools:visibility="gone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin2x"
            android:padding="6dp"
            android:visibility="invisible"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            android:background="@drawable/shape_arrow"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/title"/>

        <TextView
            android:id="@+id/title"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/base_color"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/margin2x"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/tv"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin1x"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toTopOf="@id/tv_recycler_view">

            <com.google.android.material.chip.Chip
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:checked="true"
                app:stream="@{viewModel.onTheAir}"
                app:listener="@{viewModel}"
                app:textStartPadding="@dimen/margin16dp"
                style="@style/Widget.MyApp.Chip.Choice"
                android:textColor="@color/white"
                android:text="@string/now"/>

            <com.google.android.material.chip.Chip
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:stream="@{viewModel.airingToday}"
                app:listener="@{viewModel}"
                app:textStartPadding="@dimen/margin16dp"
                style="@style/Widget.MyApp.Chip.Choice"
                android:textColor="@color/white"
                android:text="@string/today"/>

            <com.google.android.material.chip.Chip
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:stream="@{viewModel.popular}"
                app:listener="@{viewModel}"
                style="@style/Widget.MyApp.Chip.Choice"
                android:textColor="@color/white"
                android:text="@string/popular"/>

            <com.google.android.material.chip.Chip
                android:layout_width="80dp"
                app:chipStartPadding="10dp"
                app:stream="@{viewModel.topRated}"
                app:listener="@{viewModel}"
                android:layout_height="wrap_content"
                style="@style/Widget.MyApp.Chip.Choice"
                android:textColor="@color/white"
                android:text="@string/rated"/>

        </com.google.android.material.chip.ChipGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tv_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin1x"
            app:items="@{viewModel.stream.toData().results}"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_group"
            tools:listitem="@layout/item_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
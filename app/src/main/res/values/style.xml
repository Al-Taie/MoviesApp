<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/base_color</item>
        <item name="tabTextColor">@color/primary_text_color</item>
        <item name="tabIndicatorColor">@color/base_color</item>
    </style>

    <style name="SearchBar">

        <item name="android:drawablePadding">@dimen/padding1x</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:background">@drawable/shape_search_bar</item>

    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.MyApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:elevation">3dp</item>
        <item name="chipBackgroundColor">@color/chip_state</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="rippleColor">@color/base_color</item>
    </style>

    <style name="ChipTextStyle_Selected">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

</resources>